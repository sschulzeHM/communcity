<% flash.each do |name, msg| %>
    <% if msg.is_a?(String)  && (name == "notice" || name == "alert") %>
        <div>

          <div class="alert alert-<%= name == "notice" ? "success" : "danger" %>">
            <a class="close" data-dismiss="alert">&#215;</a>
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
          </div>
        </div>
    <% end %>
<% end %>